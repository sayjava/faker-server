{
   "__typename": "ProductVariant",
   "id": "gid://shopify/ProductVariant/{{faker "string.uuid" }}",
   "barcode": "{{faker "string.alphanumeric" 5}}",
   "availableForSale": {{#if out_of_stock }} false {{else}} true {{/if}},
   "barcode": "{{faker "string.alphanumeric" 10}}",
   {{#if on_sale }}
   "compareAtPrice": {{> money}},
   {{/if}}
   "currentlyNotInStock": {{#if out_of_stock }} true {{else}} false {{/if}},
   "image": {{> image}},
   "price": {{> money}},
   "quantityAvailable": {{#if out_of_stock }} 0 {{else}} 10 {{/if}},
   "requiresShipping": true,
   "sku": "{{faker "string.alphanumeric" 5}}",
   "selectedOptions": [
        {
            "name": "Materials",
            "value": "Metal"
        },
        {
            "name": "Colors",
            "value": "Red"
        },
        {
            "name": "Sizes",
            "value": "Small"
        }
    ],
   "title": "{{faker "commerce.productName" }}",
   "image": {{> image}},
   "unitPrice": {{> money}},
   "priceV2": {{> money}},
   "options": {{> product-options}},
   "unitPriceMeasurement": {
        "measuredType": "VOLUME",
        "quantityUnit": "ML",
        "quantityValue": {{faker "number.int" min=10 max=1000}},
        "referenceUnit": "ML",
        "referenceValue": {{faker "number.int" min=10 max=1000}}
    }
    {{!-- Stops an infinite recursion of templates --}}
    {{#unless no_product}}
    ,"product": {
        "__typename": "Product",
        "id": "gid://shopify/Product/{{faker 'number.int' min=1000000000 max=9999999999}}",
        "availableForSale": true,
        "title": "{{faker 'commerce.productName' }}",
        "productType": "{{faker 'commerce.productAdjective' }}",
        "createdAt": "{{faker 'date.recent' }}",
        "publishedAt": "{{faker 'date.recent' }}",
        "updatedAt": "{{faker 'date.recent' }}",
        "handle": "{{faker 'lorem.slug' 5}}",
        "vendor": "{{faker 'company.name' }}",
        "description": {{{nlbr (faker 'commerce.productDescription')}}},
        "descriptionHtml": {{{nlbr (faker 'lorem.lines' min=5 max=10)}}},
        "isGiftCard": false,
        "totalInventory": 10,
        "seo": {
            "description": "{{faker 'commerce.productDescription'}}",
            "title": "{{faker 'commerce.productAdjective'}}"
        },
        "priceRange": {
            "maxVariantPrice": {{> money}},
            "minVariantPrice": {{> money}}
        },
        "featuredImage": {{> image}},
        "options": {{> product-options}},
        "price": {{> money}},
        "featuredImage": {{> image}},
        "tags": [
            {{#repeat 3}}
                "{{faker 'commerce.productMaterial'}}"
            {{/repeat}}
        ],
        "images": {
            "pageInfo": {
                "hasNextPage": true,
                "hasPreviousPage": false
            },
            "nodes": [
                {{#repeat 5}}
                    {{> image}}
                {{/repeat}}
            ],
            "edges": [
                {{#repeat 5}}
                    {
                        "node": {{> image}}
                    }
                {{/repeat}}
            ]
        },
        "variants": {
            "edges": [
                {{#repeat 3}}
                    {
                        "node": {{> product-variant no_product=true}}
                    }
                {{/repeat}}
            ],
            "nodes": [
                {{#repeat 3}}
                    {{> product-variant no_product=true}}
                {{/repeat}}
            ]
        }
    }
    {{/unless}}
}