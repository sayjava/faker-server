{
    "cart": {{> cart}},
    "userErrors": [
        {{#if (eq (get path="ms-cart-error-code" context=context.headers)) }}
            {{#repeat 3}}
                {
                    "message": "Error: {{get path="ms-cart-error-message" context=context.headers default="Could not add item to the cart"}}",
                    "field": [
                        "cartLines",
                        "quantity"
                    ],
                    "code": "{{get path="ms-cart-error-code" context=context.headers default="INVALID"}}"
                }
            {{/repeat}}
        {{/if}}
    ]
}